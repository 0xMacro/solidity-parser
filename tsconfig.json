{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "ES2015",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
